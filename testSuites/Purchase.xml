<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite" parallel="tests" thread-count="2">
    <test verbose="2" preserve-order="true" name="Submit Order Test ">
        <groups>
            <run>
                <include name="Purchase"/>
            </run>
        </groups>

    <classes>
        <class name="demoblaze.tests.OrderWorkflowTest"/>
        <!-- you can add more test classes if needed -->
    </classes>
</test>

<test verbose="2" preserve-order="true" name="Error Validation ">
<classes>
    <class name="demoblaze.tests.ErrorValidationTest">
        <methods><include name="errorLogin"/></methods>
    </class>
</classes>
    </test>

</suite>